<% if @collection.errors.any? %>
<div class="error-msg">
    <div class="error-users">
        <div class="error-count">
            <span>The form have <%= pluralize(@collection.errors.count, "errors") %></span>
        </div>
        <div class="errors_details">
            <ul>
                <% @collection.errors.full_messages.each do |m|%>
                <li><%= m %></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
<% end %>
